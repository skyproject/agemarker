<UserControl x:Class="Agemarker.Controls.MultiplierBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="clr-namespace:Agemarker.Controls"
             mc:Ignorable="d" Height="30" Width="205">
    <Grid>
        <TextBlock x:Name="watermarkMultiplier" Text="Multiplier" Width="100" Height="26" VerticalAlignment="Center" TextAlignment="Center" FontSize="14" Foreground="Gray" Margin="0,4,105,0"/>
        <c:NumericalTextBox x:Name="textMultiplier" Background="Transparent" HorizontalContentAlignment="Center" Height="30" Width="100" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center" Margin="0,0,105,0"/>
        <TextBlock x:Name="watermarkCalculationsNumber" Text="Calculations" Width="100" Height="26" VerticalAlignment="Center" TextAlignment="Center" FontSize="14" Foreground="Gray" Margin="105,4,0,0"/>
        <c:NumericalTextBox x:Name="textCalculationsNumber" Background="Transparent" HorizontalContentAlignment="Center" Height="30" Width="100" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>